<UserControl x:Class="Point_of_Sale.Customization.BakedBeansCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Point_of_Sale.Customization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="35">Baked Beans</TextBlock>
            <TextBlock FontSize="20">Size</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Small_Button" Content="Small" HorizontalAlignment="Left" Click="Button_Click"/>
                <Button Name="Medium_Button" HorizontalAlignment="Center" Content="Medium" Click="Button_Click"/>
                <Button x:Name="Large_Button" HorizontalAlignment="Right" Content="Large" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
