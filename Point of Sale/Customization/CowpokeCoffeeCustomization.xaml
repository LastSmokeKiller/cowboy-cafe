<UserControl x:Class="Point_of_Sale.Customization.CowpokeCoffeeCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Point_of_Sale.Customization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="35">Cowpoke Coffee</TextBlock>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=Ice}"/>
                <TextBlock Text="Ice"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=Decaf}"/>
                <TextBlock Text="Decaf"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=RoomForCream}"/>
                <TextBlock Text="Room For Cream"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
